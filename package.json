{
  "name": "js-climacell-api",
  "version": "0.0.1",
  "description": "A wrapper for ClimaCell available to be used in both browser and node js environments",
  "files": [
    "dist"
  ],
  "scripts": {
    "expose": "generate-export-aliases",
    "start:dev": "webpack --mode=development --watch --progress",
    "build:prod": "webpack --mode=production",
    "prepublishOnly": "webpack --mode=production && npm run expose",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\"",
    "lint:fix": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage"
  },
  "config": {
    "exportAliases": {
      "node": "./dist/node",
      "browser": "./dist/browser"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/GeorgianStan/js-climacell-api.git"
  },
  "bugs": {
    "url": "https://github.com/GeorgianStan/js-climacell-api/issues",
    "email": "georgian.stan8@gmail.com"
  },
  "homepage": "https://github.com/GeorgianStan/js-climacell-api#readme",
  "keywords": [
    "ClimaCell",
    "Weather API",
    "Node JS Wrapper"
  ],
  "author": "Stan Georgian",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^26.0.20",
    "@typescript-eslint/eslint-plugin": "^4.14.0",
    "@typescript-eslint/parser": "^4.14.0",
    "clean-webpack-plugin": "^3.0.0",
    "eslint": "^7.18.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-prettier": "^3.3.1",
    "generate-export-aliases": "^1.1.0",
    "jest": "^26.6.3",
    "prettier": "^2.2.1",
    "ts-jest": "^26.4.4",
    "ts-loader": "^8.0.14",
    "typescript": "^4.1.3",
    "webpack": "^5.17.0",
    "webpack-cli": "^4.4.0",
    "webpack-node-externals": "^2.5.2"
  },
  "dependencies": {
    "node-fetch": "^2.6.1"
  }
}
